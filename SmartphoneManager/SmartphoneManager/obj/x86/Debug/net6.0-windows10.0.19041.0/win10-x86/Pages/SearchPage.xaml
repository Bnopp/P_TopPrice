<Page
    x:Class="SmartphoneManager.Pages.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartphoneManager.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowSpacing="10">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/images/bgimg.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center">
            <TextBox x:ConnectionId='10' x:Name="tbSearch" 
                 PlaceholderText="Rechercher..." 
                 PlaceholderForeground="White" 
                 Background="#7b7b7b"
                 CornerRadius="15,0,0,15"
                 BorderThickness="0"
                 Width="650"
                 Height="30"/>

            <Button x:ConnectionId='11' x:Name="btnSearch"
                Grid.Row="0"
                Background="#0078e7"
                BorderThickness="0"
                Width="50"
                Height="32"
                CornerRadius="0,15,15,0"
                                       >
                <Image Source="/Assets/images/magnifyIcon.png" Width="35"/>
            </Button>
        </StackPanel>

        <Grid Grid.Row="1" 
              VerticalAlignment="Top" 
              RowSpacing="10" 
              ColumnSpacing="10" 
              Width="700">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="FILTRES" 
                       Foreground="#7b7b7b" 
                       FontWeight="Bold" 
                       FontSize="15"
                       Grid.Row="0" Grid.Column="0"
                       />

            <ComboBox x:ConnectionId='3' x:Name="cbOS" 
                      PlaceholderText="Système d'opération"
                      Background="#7b7b7b"
                      CornerRadius="15"
                      Grid.Row="1" Grid.Column="0"
                      HorizontalAlignment="Stretch"
                                                 />

            <ComboBox x:ConnectionId='4' x:Name="cbConstructor" 
                      PlaceholderText="Constructeur"
                      Background="#7b7b7b"
                      CornerRadius="15"
                      Grid.Row="1" Grid.Column="1"
                      HorizontalAlignment="Stretch"
                                                 />

            <Button x:ConnectionId='5' x:Name="btnClearFilters"
                    Content="Effacer les filtres"
                    Background="#e72e00"
                    CornerRadius="15"
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                                                 />

            <StackPanel Grid.Row="2" 
                        Grid.Column="0" 
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
>
                <TextBlock Text="TRIER PAR:" 
                       Foreground="#7b7b7b" 
                       FontWeight="Bold" 
                       FontSize="15"
                       VerticalAlignment="Center"
                       />
                <ComboBox x:ConnectionId='9' x:Name="cbSort" Padding="10,0,0,0" 
                                                                      
                          PlaceholderForeground="#7b7b7b" 
                          PlaceholderText="Choisir" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch" 
                          FontWeight="Bold" 
                          FontSize="15" 
                          Foreground="#7b7b7b" 
                          BorderThickness="0" 
                          VerticalAlignment="Top">
                    <x:String>AUCUN TRI</x:String>
                    <x:String>PRIX CROISSANT</x:String>
                    <x:String>PRIX DÉCROISSANT</x:String>
                    <x:String>Taille Écran CROISSANT</x:String>
                    <x:String>Taille Écran DÉCROISSANT</x:String>
                </ComboBox>
            </StackPanel>
            <StackPanel x:ConnectionId='6' Grid.Row="2" 
                        Grid.Column="1" 
                        Grid.ColumnSpan="2"
                        Padding="35, 0, 0, 0"
                        x:Name="spClass"
                        Orientation="Horizontal">
                <TextBlock Text="Classer par:" 
                       Foreground="#7b7b7b" 
                       FontWeight="Bold" 
                       FontSize="15"
                       VerticalAlignment="Center"
                       />
                <ComboBox x:ConnectionId='8' x:Name="cbClassify" Padding="10,0,0,0" 
                                                                          
                          PlaceholderForeground="#7b7b7b" 
                          PlaceholderText="Choisir" 
                          Background="Transparent" 
                          HorizontalAlignment="Stretch" 
                          FontWeight="Bold" 
                          FontSize="15" 
                          Foreground="#7b7b7b" 
                          BorderThickness="0" 
                          VerticalAlignment="Top">
                    <x:String>Autonomie Multimédia</x:String>
                    <x:String>CPU</x:String>
                    <x:String>CPU - Taille d'écran - RAM</x:String>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Row="2" 
                        Grid.Column="2"
                        Padding="60, 0, 0, 0"
                        Orientation="Horizontal">
                <TextBlock Text="Top:" 
                       Foreground="#7b7b7b" 
                       FontWeight="Bold" 
                       FontSize="15"
                       VerticalAlignment="Center"
                       />
                <ComboBox x:ConnectionId='7' x:Name="cbTop" Padding="10,0,0,0" 
                                                       
                          PlaceholderForeground="#7b7b7b"
                          PlaceholderText="Top"
                          Background="Transparent" 
                          HorizontalAlignment="Stretch" 
                          FontWeight="Bold" 
                          FontSize="15" 
                          Foreground="#7b7b7b" 
                          BorderThickness="0" 
                          VerticalAlignment="Top">
                    <x:String>Tout</x:String>
                    <x:String>1</x:String>
                    <x:String>3</x:String>
                    <x:String>5</x:String>
                    <x:String>10</x:String>
                </ComboBox>
            </StackPanel>
        </Grid>

        <GridView x:ConnectionId='2' x:Name="phoneLibrary" Grid.Row="3" Width="700">
            <GridView.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="Background" Value="#7b7b7b"/>
                    <Setter Property="Width" Value="226"/>
                    <Setter Property="Height" Value="375"/>
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="CornerRadius" Value="15"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
                <Style TargetType="Image">
                    <Setter Property="Height" Value="175"/>
                    <Setter Property="Margin" Value="0,25,0,15"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Width" Value="150"/>
                    <Setter Property="TextWrapping" Value="WrapWholeWords"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                </Style>
            </GridView.Resources>

        </GridView>

    </Grid>
</Page>

